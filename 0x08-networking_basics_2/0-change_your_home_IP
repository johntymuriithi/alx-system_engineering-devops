#!/usr/bin/env bash

# Check if the script is being run as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run this script as root."
  exit 1
fi

# Define the hosts file path
hosts_file="/etc/hosts"

# Configure localhost to resolve to 127.0.0.2
echo "127.0.0.2 localhost" >> "$hosts_file"

# Configure facebook.com to resolve to 8.8.8.8
echo "8.8.8.8 facebook.com" >> "$hosts_file"

echo "Configuration completed. Check $hosts_file for changes."
